{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Node.js (index.ts)",
      "program": "${workspaceFolder}/src/index.ts",
      "runtimeArgs": [
        "--inspect-brk", "-r", "ts-node/register"
      ],
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env",
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
