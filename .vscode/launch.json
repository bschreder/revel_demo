{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Node.js (index.ts) [ts-node ESM]",
      "program": "${workspaceFolder}/src/index.ts",
      "runtimeArgs": [
        "--loader", "ts-node/esm", "--inspect-brk"
      ],
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env",
      // "outFiles": [
      //   "${workspaceFolder}/src/**/*.ts"
      // ],
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
